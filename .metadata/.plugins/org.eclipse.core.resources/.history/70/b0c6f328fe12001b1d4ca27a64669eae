package repeticao;

import javax.swing.JOptionPane;

public class DesafioWhile {

	public static void main(String[] args) {
		/* Solicitar dia, mes e ano, em variaveis semparadas
		 * valide se o ano esta entre 1950 e 2002
		 * valide se o mes esta entre 1 e 12
		 * valide se o dia esta entre 1 e 30 (para alguns meses) ou
		 * entre 1 e 31 para outros meses
		 * no final exibe a data completa  
		 */
		int dia = Integer.parseInt(JOptionPane.showInputDialog("Digite o dia"));
		int mes = Integer.parseInt(JOptionPane.showInputDialog("Digite o mês"));
		int ano = Integer.parseInt(JOptionPane.showInputDialog("Digite o ano"));

		while (ano<1950 || ano>2002) {
			ano = Integer.parseInt(JOptionPane.showInputDialog("Ano inválido"));
		}
		while (mes<1 || mes > 12) {
			mes = Integer.parseInt(JOptionPane.showInputDialog("Digite o mês novamente"));
		}
		if (mes==2 || mes==4 || mes==6 || mes==9 || mes==11) {
			while (dia<1 || dia>30) {
				dia = Integer.parseInt(JOptionPane.showInputDialog("Digite o dia novamente"));
			}
		}else {
			while (dia<1 || dia>31) {
				dia = Integer.parseInt(JOptionPane.showInputDialog("Digite o dia novamente"));
			}
			System.out.println(dia+"/"+mes+"/"+ano);
		}
	}
}
